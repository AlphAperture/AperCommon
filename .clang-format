---
BasedOnStyle: Google
IndentWidth: 4
ColumnLimit: 120
UseTab: Never
# Alignment configurations
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false
# Short blocks
AllowShortBlocksOnASignleLine: false
AllowShortCaseLabelsOnASingleLine: false
AllowShortFunctionsOnASingleLine: true
#
# BRACE WRAPPING
#
BraceWrapping: {
    AfterClass: true
    AfterControlStatement: true
    AfterEnum: true
    AfterFunction: true
    AfterNamespace: true
    AfterStruct: true
    AfterUnion: true
    BeforeCatch: true
    BeforeElse: true
}
BreakBeforeBraces: BS_Stroustrup
# Others
AlwaysBreakBeforeMultilineStrings: false